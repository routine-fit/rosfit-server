// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MuscleGroup {
  ABDOMINAL
  BICEPS
  DELTOID
  ERECTOR_SPINAE
  LATISSIMUS_DORSI
  PECTORAL
  TRAPEZIUS
  TRICEPS
}

enum Gender {
  MALE
  FEMALE
  BINARY
  PREFER_NOT_SPECIFY
}

enum TrainingType {
  STRENGTH
  CARDIO
  FUNCTIONAL
  FLEXIBILITY
  ENDURANCE
  SPORTSSPECIFIC
  AGILITY
  BODYWEIGHT
}

model Exercise {
  id          Int            @id @default(autoincrement())
  name        String
  muscleGroup MuscleGroup
  links       ExerciseLink[]
}

model ExerciseLink {
  id         Int      @id @default(autoincrement())
  url        String
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  exerciseId Int
}

model UserInfo {
  id                 Int                 @id @default(autoincrement())
  firebaseUid        Int                 @unique
  name               String
  lastName           String
  birthDate          DateTime
  gender             Gender
  phone              String
  pushNotification   Boolean
  routine            Routine[]
  growthRecord       GrowthRecord[]
  trainingPreference TrainingPreference?
}

model Routine {
  id         Int       @id @default(autoincrement())
  name       String
  type       String
  userId     UserInfo? @relation(fields: [userInfoId], references: [firebaseUid])
  userInfoId Int?
}

model GrowthRecord {
  id         Int      @id @default(autoincrement())
  weight     Float
  height     Float
  createdAt  DateTime
  user       UserInfo @relation(fields: [userInfoId], references: [firebaseUid])
  userInfoId Int
}

model TrainingPreference {
  id         Int          @id @default(autoincrement())
  type       TrainingType
  time       Int
  intensity  String
  user       UserInfo     @relation(fields: [userInfoId], references: [firebaseUid])
  userInfoId Int          @unique
}
