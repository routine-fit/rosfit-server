generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MuscleGroup {
  ABDOMINAL
  BICEPS
  DELTOID
  ERECTOR_SPINAE
  LATISSIMUS_DORSI
  PECTORAL
  TRAPEZIUS
  TRICEPS
}

enum TrainingType {
  STRENGTH
  CARDIO
  FUNCTIONAL
  FLEXIBILITY
  ENDURANCE
  SPORTSSPECIFIC
  AGILITY
  BODYWEIGHT
}

model Exercise {
  id          Int            @id @default(autoincrement())
  name        String
  muscleGroup MuscleGroup
  links       ExerciseLink[]
}

model ExerciseLink {
  id         Int      @id @default(autoincrement())
  url        String
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  exerciseId Int
}

model TrainingPreference {
  id        Int          @id @default(autoincrement())
  type      TrainingType
  time      Int
  intensity String
}
