generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MuscleGroup {
  ABDOMINAL
  BICEPS
  DELTOID
  ERECTOR_SPINAE
  LATISSIMUS_DORSI
  PECTORAL
  TRAPEZIUS
  TRICEPS
}

model Exercise {
  id          Int            @id @default(autoincrement())
  name        String
  muscleGroup MuscleGroup
  links       ExerciseLink[]
}

model ExerciseLink {
  id         Int      @id @default(autoincrement())
  url        String
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  exerciseId Int
}

model UserInfo {
  id               Int       @id @default(autoincrement())
  name             String
  lastName         String
  birthDate        DateTime
  gender           String
  weight           Float
  height           Float
  phone            String
  pushNotification Boolean
  routine          Routine[]
}

model Routine {
  id         Int       @id @default(autoincrement())
  name       String
  type       String
  userId     UserInfo? @relation(fields: [userInfoId], references: [id])
  userInfoId Int?
}
